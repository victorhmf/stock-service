{
  "name": "api-service",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "nodemon ./src/infrastructure/webserver/index.js --legacy-watch",
    "lint": "eslint",
    "test:unit": "jest --runInBand ./src",
    "test:unit:cov": "jest --runInBand --collect-coverage ./src",
    "test:integration": "env $(cat .env.test | xargs) jest --runInBand ./tests/integration",
    "db:migrate": "prisma migrate dev",
    "db:test:create": "node ./scripts/createTestDatabase.js",
    "db:test:migrate": "env $(cat .env.test | xargs) prisma migrate dev"
  },
  "dependencies": {
    "@prisma/client": "^5.14.0",
    "axios": "^1.6.8",
    "crypto": "^1.0.1",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "~1.9.1",
    "nodemailer": "^6.9.13",
    "pino": "^9.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.5",
    "@eslint/js": "^9.2.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.2.0",
    "globals": "^15.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "pino-pretty": "^11.0.0",
    "prisma": "^5.14.0",
    "supertest": "^7.0.0"
  },
  "prisma": {
    "schema": "./src/infrastructure/database/prisma/schema.prisma"
  }
}
